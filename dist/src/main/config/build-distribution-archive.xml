<?xml version="1.0" encoding="UTF-8"?>
<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>dist</id>
    <formats>
        <format>tar.gz</format>
        <format>zip</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>${project.basedir}/src/main/dist/bin</directory>
            <outputDirectory>bin</outputDirectory>
            <fileMode>0755</fileMode>
            <directoryMode>0755</directoryMode>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/src/main/dist</directory>
            <outputDirectory />
            <excludes>
                <exclude>bin/*</exclude>
            </excludes>
        </fileSet>
    </fileSets>
    <dependencySets>
        <dependencySet>
            <outputDirectory>lib</outputDirectory>
            <useProjectArtifact>false</useProjectArtifact>
            <excludes>
                <exclude>com.hazelcast.simulator:tests-*</exclude>
            </excludes>
        </dependencySet>

        <dependencySet>
            <outputDirectory>test-lib/hz</outputDirectory>
            <useProjectArtifact>false</useProjectArtifact>
            <includes>
                <include>com.hazelcast.simulator:tests-hz</include>
            </includes>
        </dependencySet>

        <dependencySet>
            <outputDirectory>test-lib/37</outputDirectory>
            <useProjectArtifact>false</useProjectArtifact>
            <includes>
                <include>com.hazelcast.simulator:tests-hz37</include>
            </includes>
        </dependencySet>

        <dependencySet>
            <outputDirectory>test-lib/38</outputDirectory>
            <useProjectArtifact>false</useProjectArtifact>
            <includes>
                <include>com.hazelcast.simulator:tests-hz38</include>
            </includes>
        </dependencySet>

        <dependencySet>
            <outputDirectory>test-lib/39</outputDirectory>
            <useProjectArtifact>false</useProjectArtifact>
            <includes>
                <include>com.hazelcast.simulator:tests-hz39</include>
            </includes>
        </dependencySet>

        <dependencySet>
            <outputDirectory>test-lib/ignite</outputDirectory>
            <useProjectArtifact>false</useProjectArtifact>
            <includes>
                <include>com.hazelcast.simulator:tests-ignite</include>
            </includes>
        </dependencySet>

        <dependencySet>
            <outputDirectory>test-lib/infinispan</outputDirectory>
            <useProjectArtifact>false</useProjectArtifact>
            <includes>
                <include>com.hazelcast.simulator:tests-infinispan</include>
            </includes>
        </dependencySet>

        <dependencySet>
            <outputDirectory>test-lib/geode</outputDirectory>
            <useProjectArtifact>false</useProjectArtifact>
            <includes>
                <include>com.hazelcast.simulator:tests-geode</include>
            </includes>
        </dependencySet>

        <dependencySet>
            <outputDirectory>test-lib/coachbase</outputDirectory>
            <useProjectArtifact>false</useProjectArtifact>
            <includes>
                <include>com.hazelcast.simulator:tests-couchbase</include>
            </includes>
        </dependencySet>

    </dependencySets>
</assembly>
